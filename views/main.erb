<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>ec2metadata</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="ec2metadata.css">
  <!-- jquery for status checks -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script>
  function getSeconds() {
    // Get the number of seconds since Jan 1, 1970 in UTC
    return Math.floor(new Date().getTime() / 1000,0); // conversion from ms to s
  }
  function periodicTesing() {
    $.ajax(
      '/check', {
        success: function(data,stat,xhr) {
          // alert("Success " + stat)
        },
        error: function(data,stat,xhr) {
          if ($('div.container .checks').length==0) {
            $('div.container').first().prepend(data.responseText);
          }
        }
      }
    );
    $.ajax({
      url: "/time",
      success: function(data) {
        var time_difference = Math.abs(getSeconds() - data);
        if (time_difference >= 10) {
          if ($('div.container .timecheck').length==0) {
            $('div.container').first().prepend(
              "<div class='timecheck'>\
                <div class='checkfail'>\
                  <h4><em>Times do not match.</em></h4>\
                  <p>Mismatch of " + time_difference + " seconds.</p>\
                  <p>Please compare local UTC with server UTC.</p>\
                </div>\
              </div>"
            )}
          }
      }
    });
  }

  $(document).ready(function(){
    periodicTesing();
    setInterval(periodicTesing, 10000);
  });

  </script>
</head>
<body>
<div class="container">
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">ec2metadata</a>
      </div>
    </div>
  </nav>
  <div class='maincontent'>
    <%= yield %>
  </div>
</div><!-- container -->
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>
